@echo off
rem Скрипт для очистки проекта от тестовых и резервных файлов
echo Начинаем очистку проекта от тестовых и временных файлов...

rem Проверяем наличие Python
where python >nul 2>&1
if %ERRORLEVEL% neq 0 (
    echo ОШИБКА: Python не найден в системе!
    echo Пожалуйста, установите Python или убедитесь, что он доступен в PATH.
    pause
    exit /b 1
)

rem Запускаем скрипт очистки
python cleanup_temp_files.py

echo.
echo Для выполнения операции удаления (после подтверждения) нажмите Y
echo Для отмены операции нажмите N

pause
