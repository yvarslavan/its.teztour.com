# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=dev-key-flask-helpdesk-2024-change-in-production

# MySQL (Redmine) - шаблонные значения
# Для прокси укажите MYSQL_HOST=127.0.0.1 и порт вашего туннеля
MYSQL_HOST=redmine-db.example.internal
MYSQL_PORT=3306
MYSQL_DATABASE=redmine
MYSQL_USER=redmine_user
MYSQL_PASSWORD=replace_with_real_password

# MySQL Quality - шаблонные значения
MYSQL_QUALITY_HOST=quality-db.example.internal
MYSQL_QUALITY_PORT=3306
MYSQL_QUALITY_DATABASE=redmine
MYSQL_QUALITY_USER=quality_user
MYSQL_QUALITY_PASSWORD=replace_with_real_password

# Oracle (ERP) - через локальный portproxy (если используется)
ORACLE_HOST=oracle-db.example.internal
ORACLE_PORT=11521
ORACLE_SERVICE_NAME=ENISK.TEZTOUR.COM
ORACLE_USER=oracle_user
ORACLE_PASSWORD=replace_with_real_password

# Таймаут Oracle (в секундах). Для мобильных устройств рекомендуется 10-15 сек.
ORACLE_TCP_TIMEOUT=15
# Временно можно отключить Oracle-проверку пароля:
# DISABLE_ORACLE_LOGIN_CHECK=1

# Redmine API
REDMINE_URL=https://redmine.example.internal
REDMINE_API_KEY=your_redmine_api_key_here

# MySQL VoIP CRM (Template)
MYSQL_VOIP_HOST=voip-db.example.internal
MYSQL_VOIP_PORT=3306
MYSQL_VOIP_DATABASE=tez_tour_cc
MYSQL_VOIP_USER=voip_user
MYSQL_VOIP_PASSWORD=replace_with_real_password

# Дополнительно (если используете)
REDMINE_LOGIN_ADMIN=redmine_admin
REDMINE_PASSWORD_ADMIN=replace_with_real_password
REDMINE_QUALITY_URL=https://redmine-quality.example.internal
REDMINE_QUALITY_API_KEY=your_quality_api_key_here
REDMINE_QUALITY_LOGIN_ADMIN=quality_admin
REDMINE_QUALITY_PASSWORD_ADMIN=replace_with_real_password
REDMINE_QUALITY_ANONYMOUS_USER_ID=4
REDMINE_ANONYMOUS_USER_ID=4

# Session / paths
SESSION_TYPE=filesystem
SESSION_FILE_DIR=/tmp/flask_sessions
PERMANENT_SESSION_LIFETIME=86400
DB_PATH=blog/db/blog.db
LOG_LEVEL=INFO
LOG_PATH=logs/app.log
ORACLE_LOGIN_CHECK=off

# Optional services
RECOVERY_PASSWORD_URL=
REDMINE_NOTIFICATIONS=off
SQLALCHEMY_DATABASE_URI_ORACLE_CRM=
SQLALCHEMY_SALES_SCHEMA_URI_ORACLE_SALES=
