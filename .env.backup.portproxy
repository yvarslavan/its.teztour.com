ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USER=system
ORACLE_PASSWORD=oracle

# Database Path
DB_PATH=blog/db/blog.db

# XMPP Configuration (если используется)
