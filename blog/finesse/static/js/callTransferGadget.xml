<?xml version="1.0" encoding="UTF-8"?>
<Gadget xmlns="http://www.cisco.com/cuae/gadget" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cisco.com/cuae/gadget gadget.xsd">

    <!-- Название и описание гаджета -->
    <Name>Call Transfer Gadget</Name>
    <Description>Гаджет для перенаправления вызовов для Cisco Finesse</Description>
    <!-- Инфа об себе любимом -->
    <Author>Varslavan Yuriy</Author>
    <Email>y.varslavan@tez-tour.com</Email>
    <!-- URL для загрузки HTML и JS-файлов гаджета -->
    <URL>https://its.tez-tour.com/finesse/call-transfer</URL>

    <!-- Высота окна гаджета -->
    <Height>400</Height>

    <!-- Сюда запихнем разрешенные домены для iframe -->
    <Permissions>
        <Allow-From>https://its.tez-tour.com</Allow-From>
    </Permissions>

    <!-- Конфигурация настройки контекста гаджета -->
    <Gadget-Attributes>
        <Attribute name="autologin" type="boolean" required="false" default="true"/>
        <Attribute name="showheader" type="boolean" required="false" default="false"/>
    </Gadget-Attributes>

    <!-- Опции безопасности -->
    <Security>
        <!-- Разрешить доступ к внешним ресурсам через этот гаджет -->
        <Allow-External-Resources>true</Allow-External-Resources>
    </Security>

</Gadget>
